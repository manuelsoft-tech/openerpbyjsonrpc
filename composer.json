{
    "name": "leblanc-simon/openerpbyjsonrpc",
    "description": "Library to communicate into PHP and OpenERP (Odoo)",
    "license": "MIT",
    "keywords": ["odoo", "openerp", "jsonrpc"],

    "type": "library",

    "authors": [
        {
            "name": "Simon Leblanc",
            "email": "contact@leblanc-simon.eu"
        }
    ],

    "autoload": {
        "psr-4": {
            "OpenErpByJsonRpc\\": "src/"
        }
    },

    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "laminas/laminas-json": "~3.3",
        "laminas/laminas-server": "~3.1",
        "laminas/laminas-http": "~2.16",
        "laminas/laminas-json-server": "^4.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~9.4",
        "phpstan/phpstan": "^0.12.49"
    }
}
